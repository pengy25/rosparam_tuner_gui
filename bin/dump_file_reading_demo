#! /usr/bin/env python
import rospy
import Tkinter as tk
from rosparam_tuner_gui import MultiParamFrame, readDumpFileDialog


def main():
  rospy.init_node("dump_file_reader_demo")
  while rospy.Time.now().to_sec() == 0:
    pass

  window = tk.Tk()
  frame = MultiParamFrame(window)
  frame.pack()

  params = readDumpFileDialog(window)
  for param_name, param_val in params.iteritems():
    frame.addParamFrame(param_name=param_name, param_val=param_val)

  window.mainloop()

if __name__ == "__main__":
  main()
